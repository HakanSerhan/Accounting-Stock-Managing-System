        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">

                        <div class="card">
                            <div class="card-header">
                                <a href="/Cari/CariEkle" class="btn btn-outline-warning"> Yeni Cari Oluştur</a>
                            </div>

                            <div class="card-body">
