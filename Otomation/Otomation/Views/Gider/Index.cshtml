                            <div class="card-body">
                                <table id="example1" class="table table-bordered table-striped">

                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Açıklama</th>
                                            <th>Tarih</th>
                                            <th>Tutar</th>
                                            <th> Güncelle </th>
                                            <th> Sil </th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var k in Model)
                                        {
                                            <tr>
                                                <td>
